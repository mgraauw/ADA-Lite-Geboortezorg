  <header>
    <col1>
      <item context="vrouw/naamgegevens">
        <prompt>Naam:</prompt>
        <value>{roepnaam} {achternaam/voorvoegsel} {achternaam/achternaam}</value>
      </item>
      <item context="vrouw">
        <prompt>BSN:</prompt>
