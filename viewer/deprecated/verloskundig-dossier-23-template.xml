        <prompt>At. Datum:</prompt>
        <value>{a_terme_datum_groep/a_terme_datum}</value>
      </item>
    </col1>
    <col2>
      <item context="zorgverlenerzorginstelling/zorgverlener">
        <prompt>Naam zorgverlener:</prompt>
        <value>{naam_zorgverlener}</value>
      </item>
      <item context="zorgverlenerzorginstelling/zorginstelling">
        <prompt>Naam zorginstelling:</prompt>
        <value>{naam_zorginstelling}</value>
      </item>
      <item context="zorgverlenerzorginstelling/zorginstelling">
        <prompt>Zorginstelling OID:</prompt>
        <value>{zorginstelling_oid}</value>
      </item>
      <item context="zorgverlenerzorginstelling/zorgverlener">
        <prompt>Telefoon:</prompt>
        <value>{telefoon_waar_zorgverlener_is_te_bereiken}</value>
      </item>
    </col2>
  </header>

