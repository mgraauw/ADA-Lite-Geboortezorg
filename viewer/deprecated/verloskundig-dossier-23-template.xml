        <prompt>Bloed-transfusie</prompt>
        <value>{accepteert_bloedtransfusieq}</value>
      </item>
      <item>
        <prompt>BMI</prompt>
        <value>{bmi/bmi_vrouw}</value>
      </item>
      <item>
        <prompt>Negatieve seksuele ervaringen</prompt>
        <value>{anamnese/psychosociale_anamnese/negatieve_seksuele_ervaringenq}</value>
      </item>
    </table-view>


