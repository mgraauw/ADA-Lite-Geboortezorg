<?xml version="1.0" encoding="UTF-8"?>
<sitegen>
  <!-- ================================================================== -->
  <!--
    Contains instructions for generating the GitHub pages website of ADA-Lite-Geboortezorg in the docs/ folder.
    
    Copy these files to the docs folder:
    <filecopy source="path-in-repo" destination="path-in-docs-folder"/>
    
    Generate the home page:
    <generate-home source="path-in-repo-base-markdown-file"/>
  
  -->
  <!-- ================================================================== -->
  
  <filecopy source="design/documentation/_config.yml" destination="_config.yml"/>
  <filecopy source="design/documentation/README-ada-lite.md" destination="technical-documentation.md"/>
  <filecopy source="README.md" destination="general.md"/>
  <filecopy source="design/documentation/base-homepage.md" destination="readme.md"/>
  
  <generate-home source="design/documentation/base-homepage.md"/>
  
</sitegen>
